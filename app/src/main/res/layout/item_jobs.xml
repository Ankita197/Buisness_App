<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivJob"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvJob"
        android:src="@drawable/account_icon"/>
    <TextView
        android:id="@+id/tvJob"
        app:layout_constraintTop_toTopOf="@id/ivJob"
        app:layout_constraintBottom_toBottomOf="@+id/ivJob"
        app:layout_constraintStart_toEndOf="@+id/ivJob"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:text="Accountant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvJob"
        app:layout_constraintBottom_toBottomOf="@+id/tvJob"
        android:src="@drawable/right_icon"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivJob"
        android:background="@color/colorGray"/>
</androidx.constraintlayout.widget.ConstraintLayout>